<html lang="en">
    <%- include('./partials/header.ejs') %>
    <body>
       
        <div class="jumbotron jumbotron-fluid bg-primary py-3 mb-0 pb-0" >
            <div class="container">
                <div class="row">
                    <div class="col-lg-11">
                        <h1 class="text-white">StudyCorner</h1>
                    </div>
                    <div class="col-lg-1 py-3">
                        <p><a href="/logout" class="text-warning">Logout</a></p>
                    </div>
                </div>
            </div>
        </div>
       



        <div class="container">

            <div class="row">
        
              
              <div class="col-lg-8">
        
                
                <h1 class="mt-4"><%= post.title%></h1>
        
               
                <p class="lead">
                  by
                  <a href="/home/profile/<%= post.createdBy.id%>"><%= post.createdBy.name%></a>
                </p>
        
                <hr>
        
                
                <p>Posted on <%= post.createdAt%></p>
                <hr>
        
               
                <p class="lead"><%= post.content%></p>
        
          
              
                <hr>
                <hr>
        
               
                <!-- <img class="img-fluid rounded" src="http://placehold.it/900x300" alt=""> -->
        
               
        
                
                <div class="card my-4">
                  <h5 class="card-header">Leave a Comment : </h5>
                  <div class="card-body">
                    <form action="/home/<%= post._id%>" method="POST">
                      <div class="form-group">
                        <textarea id="edior" class="form-control" name="content" id="content" rows="3" placeholder="Type your comment here...."></textarea>
                      </div>
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                  </div>
                </div>
        
               
                <div class="media mb-4">
                 
                  <div class="media-body">

                    <% if(post.comments.length > 0){ %>
                        <% post.comments.forEach(comment=>{  %>


                    <h5 class="mt-0"><%= comment.createdBy.name%></h5>
                    <p class="mt-0"><%= comment.content%></p>
                
                    <% }) %>
                    <% }else{ %>
                        <p>No comments ... </p>
                        <% } %>
                
                
                </div>
                </div>
        
               
        
              </div>
        
          
              <div class="col-md-4">
        
               
        
              
                <div class="card my-4">
                  <h5 class="card-header">Tags</h5>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                          <li>
                            <a href="#"><%= post.tags[0]%></a>
                          </li>
                         
                        </ul>
                      </div>
                     
                    </div>
                  </div>
                </div>
        
               
        
              </div>
        
            </div>
           
        
          </div>







        <%- include('./partials/footer.ejs') %>
        </body>
</html>