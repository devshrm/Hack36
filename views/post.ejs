<html lang="en">
    <%- include('./partials/header.ejs') %>
    <body>
       
        <div class="jumbotron jumbotron-fluid bg-primary py-3 mb-0 pb-0" >
            <div class="container">
                <div class="row">
                    <div class="col-lg-11">
                        <h1 class="text-white">StudyCorner</h1>
                    </div>
                    <div class="col-lg-1 py-3">
                        <p><a href="/logout" class="text-warning">Logout</a></p>
                    </div>
                </div>
            </div>
        </div>
       



        <div class="container">

            <div class="row">
        
              
              <div class="col-lg-8">
        
                
                <h1 class="mt-4"><%= post.title%></h1>
        
               
                <p class="lead">
                  by
                  <a href="#"><%= post.createdBy.name%></a>
                </p>
        
                <hr>
        
                
                <p>Posted on <%= post.createdAt%></p>
                <hr>
        
               
                <p class="lead"><%= post.content%></p>
        
          
              
                <hr>
                <hr>
        
               
                <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">
        
               
        
                <!-- Comments Form -->
                <div class="card my-4">
                  <h5 class="card-header">Leave a Comment:</h5>
                  <div class="card-body">
                    <form action="/home/<%= post._id%>" method="POST">
                      <div class="form-group">
                        <textarea class="form-control" name = "comment" id="comment" rows="3"></textarea>
                      </div>
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                  </div>
                </div>
        
                <!-- Single Comment -->
                <div class="media mb-4">
                  <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                  <div class="media-body">

                    <% if(post.comments.length > 0){ %>
                        <% post.comments.forEach(comment=>{  %>


                    <h5 class="mt-0"><%= comment.createdBy.name%></h5>
                    <p class="mt-0"><%= comment.content%></p>
                
                    <% }) %>
                    <% }else{ %>
                        <p>No blogs... </p>
                        <% } %>
                
                
                </div>
                </div>
        
               
        
              </div>
        
              <!-- Sidebar Widgets Column -->
              <div class="col-md-4">
        
               
        
                <!-- Categories Widget -->
                <div class="card my-4">
                  <h5 class="card-header">Tags</h5>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                          <li>
                            <a href="#">Web Design</a>
                          </li>
                          <li>
                            <a href="#">HTML</a>
                          </li>
                          <li>
                            <a href="#">Freebies</a>
                          </li>
                        </ul>
                      </div>
                      <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                          <li>
                            <a href="#">JavaScript</a>
                          </li>
                          <li>
                            <a href="#">CSS</a>
                          </li>
                          <li>
                            <a href="#">Tutorials</a>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
        
               
        
              </div>
        
            </div>
            <!-- /.row -->
        
          </div>







        <%- include('./partials/footer.ejs') %>
        </body>
</html>