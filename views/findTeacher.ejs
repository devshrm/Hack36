<html lang="en">
<%- include('./partials/header.ejs') %>

    <body>

        <div class="jumbotron jumbotron-fluid bg-info py-3 mb-0 pb-0">
            <div class="container">
                <div class="row">
                    <div class="col-lg-11">
                        <h1 class="text-white">StudyCorner</h1>
                    </div>
                    <div class="col-lg-1 py-3">
                        <p><a href="/logout" class="text-warning">Logout</a></p>
                    </div>
                </div>
            </div>
        </div>


        <div class="container-fluid bg-light text-danger py-3">
            <div class="row justify-content-center text-center">

                <div class="col-lg-2"><a href="/home">Home</a></div>
                <div class="col-lg-2"><a href="/home/findTeacher">Find Teacher</a></div>
                <div class="col-lg-2"><a href="/home/my-profile">My Profile</a></div>

            </div>
        </div>

        <div class="row" id="GoogleMAP">
            <div class="col-lg-3">
                <a href="/home/findTeacher/map">
                    <p class="">Use Google Map instead.</p>
                </a>
            </div>
        </div>
        <h2 class="text-center">Teachers</h2>
        <div class="container text-muted mt-5">
            <div class="row">
               
                    <% if(teacher.length> 0){ %>
                        <% teacher.forEach(teacher=> { %>
                            <div class="col-3">
                            <div class="card">
                                <img src="/images/default.jpg" class="card-img-top img-fluid" />
                                <div class="card-block">
                                    <% var s='/home/profile/' + teacher.id._id %>
                                    <a href="<%=s%>">
                                        <h4 class="text-center">
                                            <%= teacher.name %>
                                        </h4>
                                    </a>
                                    <p class=" text-center">Current batch strength : <%= teacher.curBatch%>
                                    </p>
                                    <p class="text-center">Maximum batch strength : <%= teacher.maxBatch%>
                                    </p>


                                </div>
                            </div>
                        </div>
                   

                            <% }) %>
                                <% }else{ %>
                                    <p>No teacher nearBy... </p>
                                    <% } %>
                                </div>
               
        </div>



        <%- include('./partials/footer.ejs') %>
    </body>

</html>